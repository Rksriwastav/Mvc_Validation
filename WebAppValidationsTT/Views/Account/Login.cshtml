@model WebAppValidationsTT.Models.UserViewModel
@{
    ViewBag.Title = "Login";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal" style="margin-top:10px;">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
